<!DOCTYPE html>
<html>
  <head>
    <title>Bartinderapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if logged_in? %>
      hello <%= @current_user.email %>!<%= link_to 'log out', logout_path, { method: 'delete' } %>
    <% else %>
      <%= link_to 'log in', login_path %> or <%= link_to 'sign up', new_user_path %>
    <% end %>
    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <p class="error"><%= error %></p>
        <% end %>
    <% end %>
    <% if flash[:notice] %>
        <div>
            <%= flash[:notice] %>
        </div>
    <% end %>
    <li><%= link_to('All Users', '/users') %></li>
    <li><%= link_to('All Cocktails', '/cocktails') %></li>
      <li><%= link_to('Create Cocktail', '/cocktails/new') %></li>

    <%= yield %>
  </body>
</html>
