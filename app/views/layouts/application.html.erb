<!DOCTYPE html>
<html>
  <head>
    <title>BarTinder</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <%= link_to "Home", welcome_path %> _____________________________________________________
  <%= link_to "Users", users_path %>
  <%= link_to "Random Cocktail", cocktail_path(Cocktail.all.sample) %>
  <%= link_to "Cocktails", cocktails_path %>
  <%= link_to "New Cocktail", new_cocktail_path %>
  <%= link_to "Ingredients", types_path %> _________________________________

    <% if logged_in? %>
      Hello <%= @current_user.name.titleize %>!   <%= link_to "Profile", user_path(session[:user_id]) %>   <%= link_to 'Log Out', logout_path, { method: 'delete' } %>

    <% end %>
    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <p class="error"><%= error %></p>
        <% end %>
    <% end %>
    <% if flash[:notice] %>
        <div>
            <%= flash[:notice] %>
        </div>
    <% end %>
 <%# <%= image_tag "background.jpg" %> %>
    <%= yield %>
  </body>
</html>
