<!DOCTYPE html>
<html>
  <head>
    <title>Bartinderapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= link_to "Home", welcome_path %> 
  <%= link_to "Users", users_path %> 
  <%= link_to "Cocktails", cocktails_path %> 
  <%= link_to "New Cocktail", new_cocktail_path %> 
  __________________________________________________
    <% if logged_in? %>
      Hello <%= @current_user.name.titleize %>!   <%= link_to "Profile", user_path(session[:user_id]) %>   <%= link_to 'Log Out', logout_path, { method: 'delete' } %>
    <% else %>
      <%= link_to 'Log In', login_path %> or <%= link_to 'Sign Up', new_user_path %>
    <% end %>
    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
            <p class="error"><%= error %></p>
        <% end %>
    <% end %>
    <% if flash[:notice] %>
        <div>
            <%= flash[:notice] %>
        </div>
    <% end %>

    <%= yield %>
  </body>
</html>
